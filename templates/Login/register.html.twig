<html lang="en">

	<head>
		<meta charset="utf-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
		<meta name="description" content=""/>
		<meta name="author" content=""/>
		<title>Fédération National des Mangeurs
		</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

	</head>
	<body style="background: linear-gradient(to bottom, #F2B416 , #000000 )">
		<div class="container" style="padding-top:90px; padding-bottom:90px;">
			<div class="row justify-content-center">
				<div class="col-md-7 pt-5 pb-3 rounded-3" style="border: 2px solid black; background-color:#ECAB03;">
					<h1 class="text-center">Inscription</h1>
					<form class="px-5 mx-5" action="{{ path('app_register') }}" method="POST" style="background-color:#ECAB03;">
						<div>
							<input type="text" class="form-control mb-3" id="nom" name="nom" placeholder="Nom" required style="border: 2px solid black;">
						</div>

						<div>
							<input type="text" class="form-control mb-3" id="prenom" name="prenom" placeholder="Prénom" required style="border: 2px solid black;">
						</div>

						<div>
							<input type="email" class="form-control mb-3" id="adresse_mail" name="adresse_mail" placeholder="Adresse mail" required style="border: 2px solid black;">
						</div>

						<div>
							<input type="password" class="form-control mb-3" id="mot_de_passe" name="mot_de_passe" placeholder="Mot de passe" required style="border: 2px solid black;">
						</div>

						<div>
							<input type="text" class="form-control mb-3" id="adresse_postale" name="adresse_postale" placeholder="Adresse postale" required style="border: 2px solid black;">
						</div>

						<div>
							<input type="tel" class="form-control mb-3" id="numero_telephone" name="numero_telephone" placeholder="Numéro de téléphone" required style="border: 2px solid black;">
						</div>
                        <div class="text-center">
						    <button type="submit" class="btn px-5" style="color:#ffffff; background-color:#020202;">S'inscrire</button>
                        </div>
                    </form>
				</div>
			</div>
		</div>
	</body>
</html>
